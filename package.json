{
  "name": "claude-context",
  "version": "0.1.0",
  "private": true,
  "description": "Claude Context - Organizational knowledge platform for AI assistants",
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r --parallel dev",
    "dev:api": "pnpm --filter @forge/api dev",
    "dev:web": "pnpm --filter @forge/web dev",
    "test": "pnpm -r test",
    "test:coverage": "pnpm -r test:coverage",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "db:generate": "pnpm --filter @forge/prisma generate",
    "db:migrate": "pnpm --filter @forge/prisma migrate:dev",
    "db:push": "pnpm --filter @forge/prisma db:push",
    "db:studio": "pnpm --filter @forge/prisma studio"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.3"
  }
}
