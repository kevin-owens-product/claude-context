{
  "name": "@forge/api",
  "version": "0.1.0",
  "private": true,
  "description": "Claude Context API - NestJS Backend",
  "main": "dist/main.js",
  "scripts": {
    "build": "nest build",
    "clean": "rm -rf dist",
    "dev": "nest start --watch",
    "start": "nest start",
